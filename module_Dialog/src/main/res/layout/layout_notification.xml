<?xml version="1.0" encoding="UTF-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:id="@+id/notif_fl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/dp_10"
    android:paddingRight="@dimen/dp_10">

    <ImageView
        android:id="@+id/notif_iv"
        android:layout_width="@dimen/dp_33"
        android:layout_height="@dimen/dp_33"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_20"
        android:src="@drawable/dia_btbackground0" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/dp_42"
        android:layout_marginRight="@dimen/dp_45"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/notif_tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_5"
            android:textColor="#282e33"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/notif_tvText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_2"
            android:textColor="#66737f"
            android:textSize="@dimen/sp_15" />

    </LinearLayout>

    <TextView
        android:id="@+id/notif_tvTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginRight="@dimen/dp_42"
        android:textColor="#66737f"
        android:textSize="@dimen/sp_11" />

    <ImageView
        android:id="@+id/notif_ivClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|right"
        android:scaleType="center"
        android:src="@android:drawable/ic_menu_close_clear_cancel" />

</FrameLayout>
