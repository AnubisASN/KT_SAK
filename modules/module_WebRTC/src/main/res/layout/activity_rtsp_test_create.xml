<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F6F6F6">
    <include layout="@layout/ui_title_bar"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:background="@drawable/bg_round_corner_white"
            android:layout_margin="15dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="33dp"
                android:gravity="center"
                android:textColor="#131313"
                android:textSize="16sp"
                android:text="请在下方输入拉流名称"
                />
            <EditText
                android:id="@+id/targetid_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:layout_marginTop="33dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:textColor="#131313"
                android:textSize="14sp"
                android:hint="填写名称..."
                android:textColorHint="#ADADAD"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="36dp"
                android:layout_marginRight="36dp"
                android:background="#ADADAD"
                />

            <EditText
                android:id="@+id/rtsp_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:layout_marginTop="23dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:textColor="#131313"
                android:textSize="14sp"
                android:hint="填写rtsp或rtmp地址..."
                android:text="rtsp://184.72.239.149/vod/mp4://BigBuckBunny_175k.mov"
                android:textColorHint="#ADADAD"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="36dp"
                android:layout_marginRight="36dp"
                android:background="#ADADAD"
                />
            <RelativeLayout
                android:id="@+id/yes_btn_live"
                android:layout_width="291dp"
                android:layout_height="49dp"
                android:background="@drawable/bg_btn_orange"
                android:layout_centerInParent="true"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="9dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="49dp"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:textColor="#ffffff"
                    android:text="创建互动直播"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/yes_btn_meeting"
                android:layout_width="291dp"
                android:layout_height="49dp"
                android:background="@drawable/bg_btn_orange"
                android:layout_centerInParent="true"
                android:layout_marginTop="9dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="49dp"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:textColor="#ffffff"
                    android:text="创建视频会议"
                    />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
